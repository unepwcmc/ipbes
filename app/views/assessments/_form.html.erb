<%= simple_form_for(@assessment, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :short_title %>
    <%= f.input :note %>
    <%= f.input :ready_to_publish %>
    <%= f.input :published %>
    <%= f.input :editor_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
