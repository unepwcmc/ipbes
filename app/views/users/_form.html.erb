<%= simple_form_for(@user, html: { class: 'form-horizontal' }, :defaults => { :input_html => { :class => 'span8' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :approved, input_html: { class: false } %>
    <%= f.input :admin, input_html: { class: false } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
